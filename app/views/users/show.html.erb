<div class="row">
 <div class="col-md-3">
  <%= render 'users/list', user: @user, book: @book %>
 </div>
 <%= flash[:notice] %>

<div class="col-md-8 offset-md-1">
 <h2>books</h2>
  <table class="table table-striped">
    <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
     <tr>
      <td><%= link_to user_path do %>
      <%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %><% end %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
      <td></td>
     </tr>
    <% end %>
    </tbody>


  </table>
 </div>
</div>

