<%= flash[:notice] %>
 <h2 class="User-item">User info</h2>

<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
<P> name <%= user.name %></p>
<P>introduction <%= user.introduction %></p>
<%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
 <i class="fas fa-user-cog"></i>
<% end %>
<h2 class="User-item">New book</h2>

<%= form_with model:book, local:true do |f| %>

 <p>title</p>
 <%= f.text_field :title %>

 <p>Opinion</p>
 <%= f.text_area :body %>

 <div><%= f.submit 'Create Book', class: "btn btn-success"%></div>

<% end %>