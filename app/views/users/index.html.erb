<div class="row">
<div class="col-md-3">
 <%= render 'users/list', user: @user, book: @book %>
</div>
 <div class= "col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">

    <% @users.each do |user| %>
    <tr>
    <td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'30x30',format: 'no_image.jpg' %></td>
   <th><%= user.name %><th>
   <th><%= link_to "Show", user_path(user) %></th>
   </tr>
   <% end %>
   </table>
  </div>
</div>

