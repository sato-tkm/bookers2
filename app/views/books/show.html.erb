<div class="row">
<div class="col-md-3">
<%= render 'users/list', user: @user, book: @book_new %>
</div>
<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
<tr>
    <td>
    <%= link_to user_path(@user) do %>
    <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'30x30'%><br>
    <%= @user.name %>
    <% end %>
    </td>
    <td>
<%= link_to @book.title, book_path %>
</td>
<td>
<%= @book.body %>
    </td>
    <% if @book.user == current_user %>
    <td>
        <%= link_to "Edit", edit_book_path(@book),  class: "btn btn-success" %>
    </td>
    <td>
        <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger" %>
    </td>
    <% end %>
</tr>
</table>
</div>
</div>